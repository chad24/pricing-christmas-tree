<div class="container" style="margin-top: 2em;">
    <h1>Material: {{model.material_name}}</h1>
    <h4>Material Number: {{model.material_number}}</h4>

    <div class="row" style="margin-left: 0;">
        <div style="width: 45%; float: left; margin-right: 3%; padding-top: 3em;">
            <form>
                <button class="btn  btn-success" style="margin-bottom: 2em;" {{action 'addRule'}}>Add Rule</button>
                {{#each rules as |rule|}}
                    {{rule-form rule=rule dataFields=dataFields refresh=(action 'renderJson')}}
                {{/each}}
            </form>
        </div>
        <div style="width:45%; float: left;">
            <h1>Rules JSON</h1>
            {{highlight-js code=json lang="json" hasLineNumbers=false}}
        </div>
    </div>
</div>